
<header>
    <h1>Finstagram</h1>
</header>
<main role="main">
    <article>
        <article class="post">
            <div class="user-info">
                <img src="<%= @post_fish[:avatar_url] %>" alt="<%= @post_fish[:username] %>">
                <h2><%= @post_fish[:username] %></h2>
                <h3><%= @post_fish[:humanized_time_ago]%></h3>
            </div>
            <a class="photo" href="#">
                <img src="<%= @post_fish[:photo_url] %>" alt="post from <%= @post_fish[:username]%>">
            </a>
            <div class="actions">
                <%= @post_fish[:like_count] %> likes
                <span class="comment-count"><%= @post_fish[:comment_count] %> comment</span>
            </div>
            <ul class="comments">
                <li>
                    <p>
                        <%= @post_fish[:comments][0][:username] %>: <%= @post_fish[:comments][0][:text] %>
                    </p>
                </li>
            </ul>
        </article>
